{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script", // airbnb sets its to "module"
  },
  "globals": { },
  "rules": {
    "no-plusplus": [
      1, {
      "allowForLoopAfterthoughts": true
    }],
    "consistent-return": 1,
    "no-mixed-operators": 0,
    "no-param-reassign": 0,
    "no-shadow": 1,
    "global-require": 1,
    "new-cap": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "keyword-spacing": ["error", { "overrides": {
      "if": { "after": false },
      "for": { "after": false },
      "while": { "after": false }
      }
    }],
    "space-before-function-paren": 0,
    "strict": 0,
    "max-len": ["error", 120],
    "vars-on-top": 1,
    "camelcase": "off",
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "no-else-return": 0,
    "arrow-body-style": 1
  }
}
